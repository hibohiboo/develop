{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "filenames"
    ],
    "settings":{
        "ignore":[
            "express", 
            "log4js", 
            "serve-favicon", 
            "body-parser", 
            "cookie-parser", 
            "helmet",
            "sequelize"]
    },
    "rules": {
        "no-unused-vars": ["off"],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": false
            }
        ],
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-unused-expressions":[2, { "allowShortCircuit": true }],
        "no-shadow": 0,
        "require-jsdoc":1,
        "valid-jsdoc":1,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved":[0, {
          "ignore":[
            "express", 
            "log4js", 
            "serve-favicon", 
            "body-parser", 
            "cookie-parser", 
            "helmet",
            "sequelize"]
        }],
        "import/extensions": 0,
        "filenames/match-regex": [2, "^[a-z-][a-z0-9-]+$", true],
        "filenames/match-exported": [2, [ null, "kebab" ] ]
    }
}