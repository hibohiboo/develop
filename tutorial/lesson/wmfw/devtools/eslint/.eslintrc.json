{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": ["off"],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": false
            }
        ],
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "import/no-unresolved": [2, { "ignore": ["express"] }],
        "no-shadow": 0
    }
}