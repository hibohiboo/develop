{
  "appenders": [
    {
      "type":     "file",
      "category": "system",
      "maxLogSize": 1048576,
      "backups": 3,
      "filename": "/wmfw/dist/logs/system.log"
    },
    {
      "type":     "dateFile",
      "category": "access",
      "filename": "/wmfw/dist/logs/access.log",
      "pattern":  "-yyyy-MM-dd"
    },
    {
      "type":     "dateFile",
      "category": "error",
      "filename": "/wmfw/dist/logs/error.log",
      "pattern":  "-yyyy-MM-dd"
    }
  ]
}